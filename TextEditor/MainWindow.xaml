<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="KeyDownHandler">
    <Grid>
        <Button x:Name="OpenFileButton" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="OpenFileButtonHandler">Open file</Button>
        <Button x:Name="SaveFileButton" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="SaveFileButtonHandler" Margin="100,0,0,0">Save file</Button>
        <TextBox x:Name="MainTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Panel.ZIndex="-1" Margin="0,30,0,0"/>
    </Grid>
</Window>
